{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "experimentalDecorators": true,
    "lib": ["es2015"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "./",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@assets/*": ["./assets/*"],
      "@base/*": ["./@base/*"],
      "@config/*": ["./@config/*"],
      "@src/*": ["./src/*"],
      "@services/*": ["./services/*"]
    }
  },
  "exclude": [
    "node_modules",
    "defaults",
    "build",
    "scripts",
    "acceptance-tests",
    "@config/webpack",
    "jest",
    "@src/setupTests.ts"
  ],
}
